<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="10dip"
	android:paddingRight="10dip"
	android:paddingTop="2dip"
	android:paddingBottom="2dip">
	<ImageView
		style="@style/icon.small"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginRight="6dip"
		android:id="@+id/content_icon"/>
	<ImageView
		android:id="@+id/content_multi_icon"
		android:layout_width="@dimen/list_icon_size"
		android:layout_height="@dimen/list_icon_size"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@id/content_icon"
		android:visibility="gone"/>
	<TextView
		android:id="@+id/content_text"
		android:text="Filename"
		android:layout_toRightOf="@+id/content_icon"
		style="@style/Large" />
	<TextView
		android:id="@+id/content_fullpath"
		android:text="/fullpath"
		android:layout_below="@+id/content_text"
		android:layout_alignLeft="@+id/content_text"
		android:layout_toLeftOf="@+id/content_info"
		style="@style/Small"
		android:ellipsize="start"
		android:singleLine="true"
		android:layout_width="wrap_content"
		android:gravity="left" />
	<TextView
		android:id="@+id/content_info"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:gravity="right"
		android:text=""
		android:ellipsize="end"
		android:typeface="monospace"
		style="@style/Small" />
</RelativeLayout>